{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kibela",
  "title": "Kibela",
  "description": "",
  "icon": "kibela-icon.png",
  "author": "Ito",
  "license": "MIT",
  "commands": [
    {
      "name": "command-list-notes",
      "title": "List Notes",
      "subtitle": "Kibela",
      "description": "List Notes",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "name": "team",
      "title": "Team",
      "description": "Kibela Team",
      "required": true
    },
    {
      "type": "textfield",
      "name": "token",
      "title": "Token",
      "description": "Kibela API Token",
      "required": true
    },
    {
      "type": "dropdown",
      "data": [
        {
          "title": "100",
          "value": "100"
        },
        {
          "title": "200",
          "value": "200"
        },
        {
          "title": "300",
          "value": "300"
        }
      ],
      "name": "query_limit",
      "title": "Query Limit",
      "description": "Query Limit of Kibela API",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "graphql-tag": "^2.12.6",
    "node-fetch": "^3.2.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
